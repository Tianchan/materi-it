<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgkitkat"
    tools:context=".NewFeedbackActivity" >

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="Nama"
        android:textSize="17dip"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inputName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/TextView1"
        android:layout_below="@+id/TextView1"
        android:layout_margin="5dip"
        android:layout_marginBottom="15dip"
        android:hint="Nama Lengkap"
        android:singleLine="true" />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/TextView1"
        android:layout_below="@+id/inputName"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="Nomor HP"
        android:textSize="17dip"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inputPrice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/inputName"
        android:layout_below="@+id/TextView2"
        android:layout_margin="5dip"
        android:layout_marginBottom="15dip"
        android:hint="Contoh : 628997206535"
        android:inputType="numberDecimal"
        android:singleLine="true" />

    <TextView
        android:id="@+id/TextView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/TextView2"
        android:layout_below="@+id/inputPrice"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="Feedback"
        android:textSize="17dip"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inputDesc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView3"
        android:layout_margin="5dip"
        android:layout_marginBottom="15dip"
        android:gravity="top"
        android:lines="4"
        android:hint="Saran dan masukan ketik disini ..." />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="Copyright 2015 - Materi-IT All Right Reserved"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCreateProduct"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputDesc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Kirim" />
    
</RelativeLayout>